{
  "name": "trading-platform-simulator",
  "version": "1.0.0",
  "description": "A simulated trading platform for practicing stock and asset trades with virtual money.",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "start": "tsx src/server.ts",
    "dev": "tsx watch src/server.ts",
    "test": "jest",
    "test:integration": "jest tests/integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "migrate": "tsx ./node_modules/.bin/knex migrate:latest --knexfile knexfile.ts",
    "migrate:rollback": "tsx ./node_modules/.bin/knex migrate:rollback --knexfile knexfile.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write '{src,tests,migrations}/**/*.{ts,js,json}'",
    "format:check": "prettier --check '{src,tests,migrations}/**/*.{ts,js,json}'",
    "typecheck": "tsc --noEmit",
    "seed:run": "tsx ./node_modules/.bin/knex seed:run --knexfile knexfile.ts",
    "build": "tsc",
    "prepare": "npm run typecheck && npm run lint && npm run format:check",
    "validate": "npm run test && npm run prepare"
  },
  "keywords": [
    "node",
    "typescript",
    "trading",
    "knex",
    "postgres",
    "portfolio"
  ],
  "author": "Matthew Kropp",
  "license": "MIT",
  "dependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.19",
    "@types/jsonwebtoken": "^9.0.9",
    "axios": "^1.9.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^5.1.0",
    "finnhub": "^1.2.19",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "node-cache": "^5.1.2",
    "pg": "^8.11.3",
    "zod": "^3.25.56"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.11.30",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "crypto": "^1.0.1",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "supertest": "^7.1.1",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.4",
    "typescript": "^5.4.5"
  }
}
